<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('./partials/head.ejs'); %>
    <!-- 
      <link rel="stylesheet" href="/stylesheets/style.css">
    -->
  </head>
  <body>
    
    <!--Navbar-->
    <%- include('./partials/navbar.ejs'); %>

    
    <div class="h-screen w-full">
        <div class="py-20 bg-gray-100 flex flex-col justify-center">
          <!-- Formulaire d'annonce -->
          <form class="bg-white max-w-[700px] w-full mx-auto p-20 px-6 rounded-3xl border-gray-100" action="/annonces/add" method="POST">
            <h2 class="text-4xl text-black font-bold text-center">Add an Announcement</h2>
      
            <!-- Titre -->
            <div class="flex flex-col mt-8 text-black py-2">
              <label for="titre">Title:</label>
              <input placeholder="Enter the title" class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" type="text" name="titre" id="titre" required>
            </div>
      
            <!-- Type (Vente/Location) -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="type">Type:</label>
              <select class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" name="type" id="type" required>
                <option value="Vente">Vente</option>
                <option value="Location">Location</option>
              </select>
            </div>
      
            <!-- Statut de publication -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="statusPublication">Publication Status:</label>
              <select class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" name="statusPublication" id="statusPublication" required>
                <option value="Publiée">Publiée</option>
                <option value="Non publiée">Non publiée</option>
              </select>
            </div>
      
            <!-- Statut du bien -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="statusBien">Property Status:</label>
              <select class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" name="statusBien" id="statusBien" required>
                <option value="disponible">Disponible</option>
                <option value="loué">Loué</option>
                <option value="vendu">Vendu</option>
              </select>
            </div>
      
            <!-- Description -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="descriptionLongue">Description:</label>
              <textarea placeholder="Enter a detailed description" class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" name="descriptionLongue" id="descriptionLongue" required></textarea>
            </div>
      
            <!-- Prix -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="prix">Price:</label>
              <input placeholder="Enter the price" class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" type="number" name="prix" id="prix" required>
            </div>
      
            <!-- Date de disponibilité -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="dateDisponibilite">Availability Date:</label>
              <input class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" type="date" name="dateDisponibilite" id="dateDisponibilite" required>
            </div>
      
            <!-- Photos (optionnel) -->
            <div class="flex flex-col mt-4 text-black py-2">
              <label for="photos">Photos:</label>
              <input placeholder="Enter photo URLs (optional)" class="rounded-xl border-2 border-gray-100 mt-2 p-2 bg-transparent" type="text" name="photos" id="photos">
            </div>
      
            <!-- Bouton de soumission -->
            <div>
              <button class="active:scale-[.98] active:duration-75 transition-all hover:scale-[1.01] ease-in-out w-full text-white rounded-xl my-5 py-2 bg-blue-600" type="submit">Add</button>
            </div>
          </form>
        </div>
        <!--Footer -->
    <%- include('./partials/footer.ejs'); %>
      </div>
      
  </body>
</html>

