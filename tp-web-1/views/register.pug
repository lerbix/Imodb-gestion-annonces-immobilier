doctype html
html
  head
    title Registration
  body
    h1 Registration

    //- Display any registration-related messages here (e.g., success or error messages)
    if message
      p.message= message

    //- Registration form
    form(action="/register", method="POST")
      //- Username field
      label(for="username") Username:
      input(type="text", name="username", id="username", required)

      //- Password field
      label(for="password") Password:
      input(type="password", name="password", id="password", required)

      //- isAdmin checkbox
      label(for="isAdmin") Register as Admin:
      input(type="checkbox", name="isAdmin", id="isAdmin" value="true")

      //- Submit button
      input(type="submit", value="Register")

    //- Link to login page (if applicable)
    p
      | Already have an account? 
      a(href="/login") Login
